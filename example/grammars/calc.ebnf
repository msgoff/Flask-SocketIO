    @@grammar::CALC


    start = expression $ ;


    expression
        =
        | expression '+' term
        | expression '-' term
        | term
        ;


    term
        =
        | term '*' factor
        | term '/' factor
        | factor
        ;


    factor
        =
        | '(' expression ')'
        | '{' expression '}'
	| number
        | float
	;

    float = /\d*\.\d+/ 
    number = /\d+/ ;
